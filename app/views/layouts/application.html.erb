<!DOCTYPE html>
<html>
<head>
    <title><%= generate_title yield :title %></title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= stylesheet_link_tag    'http://fonts.useso.com/icon?family=Material+Icons' %>
    <%= stylesheet_link_tag    'http://fonts.useso.com/css?family=Abel' %>
    <%= stylesheet_link_tag    'http://fonts.useso.com/css?family=Roboto' %>
    <%= javascript_include_tag 'application' %>
    <%= yield :head %>
    <%= csrf_meta_tags %>
</head>
<body id="body">
    <%= render 'shared/navbar' %>
    
    <%= yield %>

    <%= render 'shared/footer' %>
    <%= debug(params) if Rails.env.development? %>
    <script>
        <% flash.each do |message_type, message| %>
            Materialize.toast('<%= "[#{message_type}]: #{message}" %>', 4000, 'rounded')   
        <% end %>
    </script>
</body>
</html>
